<table>
<% for (var iIndex=0; iIndex<quizes.length; iIndex++) { %>
	<tr>
		<td>
			<a href="quizes/<%= quizes[iIndex].id %>">
				<%= quizes[iIndex].pregunta %>
			</a>
		</td>
		<% if(session.user) { %>
		<td>
			<a href="quizes/<%= quizes[iIndex].id %>/edit">
				<button>editar</button>
			</a>
		</td>
		<td>
			<form method="post" action="quizes/<%= quizes[iIndex].id %>?_method=delete">
				<button type="submit" onClick="return confirm('Borrar: <%= quizes[iIndex].pregunta %>');">
					borrar
				</button>
			</form>
		</td>
		<% } %>
	</tr>
<%	}%>
</table><p>

<% if(session.user) { %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<% } %>
